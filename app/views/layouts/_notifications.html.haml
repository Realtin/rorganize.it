%ul.dropdown-menu
  - current_person.notifications.reverse.each do |notification|
    %li
      = notification.content
      %a{:href => "#", title: "mark as viewed"}= fa_icon "eye"

      = form_for(notification,
          html: {:method => :delete},
          data: { confirm: "Sure?" },
          ) do |f|
        / = f.hidden_field :id, value: notification.id
        %button.link.no-btn
          %span= fa_icon "trash-o"
